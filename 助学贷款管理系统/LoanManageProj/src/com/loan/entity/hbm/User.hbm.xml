<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.loan.entity.User" table="UserInfo" schema="dbo" catalog="LoanDB">
        <id name="userId" type="java.lang.Integer">
            <column name="UserId" not-null="true" />
            <generator class="native" />
        </id>
        <property name="userName" type="java.lang.String">
            <column name="UserName" length="50" not-null="true" unique="true" />
        </property>
        <property name="userPwd" type="java.lang.String">
            <column name="UserPwd" length="50" not-null="true" />
        </property>
        <property name="status" type="java.lang.String">
        	<column name="Status" length="30" not-null="true"></column>
        </property>
        <property name="remark" type="java.lang.String">
            <column name="Remark" length="100" />
        </property>
        
        <set name="student" inverse="true" cascade="all">
            <key>
                <column name="UserId" not-null="true" />
            </key>
            <one-to-many class="com.loan.entity.Student" />
        </set>
    </class>
</hibernate-mapping>
